<Window x:Class="ChatRoom.Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Server (Admin)" Height="450" Width="600" Background="#F0F0F0">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Background="White" Margin="0,0,10,0" Padding="10">
            <StackPanel>
                <TextBlock Text="SERVER CONTROL" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="IP Address:"/>
                <TextBox x:Name="txtIP" Text="127.0.0.1" IsReadOnly="True" Padding="5" Margin="0,5,0,15" Background="#EEEEEE"/>

                <TextBlock Text="Port:"/>
                <TextBox x:Name="txtPort" Text="9999" Padding="5" Margin="0,5,0,20"/>

                <Button x:Name="btnStart" Content="START SERVER" Height="40" Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="0,0,0,10" Click="btnStart_Click"/>
                <Button x:Name="btnStop" Content="STOP SERVER" Height="40" Background="#F44336" Foreground="White" FontWeight="Bold" IsEnabled="False" Click="btnStop_Click"/>
            </StackPanel>
        </Border>

        <GroupBox Grid.Column="1" Header="Live Logs" BorderBrush="Gray">
            <ListBox x:Name="lbLogs" Background="Black" Foreground="#00FF00" FontFamily="Consolas" FontSize="12"/>
        </GroupBox>
    </Grid>
</Window>